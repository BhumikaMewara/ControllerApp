<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:background="@drawable/booking_item_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_bookingitem_itemview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/iv_bookingitem_bookingid"
        android:src="@drawable/bookingid_cbs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>

    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:id="@+id/tv_bookingitem_bookingid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Booking ID"
        android:textColor="@color/Black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bookingitem_bookingid"
        app:layout_constraintStart_toEndOf="@+id/iv_bookingitem_bookingid"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingitem_bookingid"
        app:layout_constraintVertical_bias="1.0" />
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bookingitem_distance_title"
        android:text="Distance"
        android:layout_marginRight="30dp"
        android:textColor="@color/Black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingitem_distance"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@id/iv_bookingitem_bookingid"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/iv_bookingitem_distance"
        android:src="@drawable/distance_cbs"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bookingitem_distance_title"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingitem_bookingid"
        app:layout_constraintBottom_toBottomOf="@id/iv_bookingitem_bookingid"/>
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bookingitem_bookingid"
        android:textSize="12dp"
        android:text="1234567"
        android:maxLines="1"
        android:ellipsize="end"
        android:foregroundGravity="center_vertical"
        android:textColor="@color/Black"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_bookingid_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_bookingid_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_bookingitem_distance"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="1dp"/>
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bookingitem_distance"
        android:textColor="@color/Black"
        android:maxLines="1"
        android:foregroundGravity="center_vertical"
        android:ellipsize="end"
        android:textSize="12dp"
        android:text="2345 KM"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_distance_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/tv_bookingitem_bookingid"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bookingitem_bookingid"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/iv_bookingitem_from"
        android:src="@drawable/from_cbs"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_bookingid"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_bookingid"/>
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bookingitem_fromlocation"
        android:text="Boranada,Summer Nagar,115"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/Black"
        app:layout_constraintStart_toEndOf="@+id/iv_bookingitem_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingitem_from"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bookingitem_from"
        android:layout_marginLeft="10dp"/>

    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:id="@+id/tv_bookingitem_fromtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="From"
        android:textSize="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/tv_bookingitem_fromlocation"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_fromlocation"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_bookingid"
        app:layout_constraintVertical_bias="1.0" />
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:id="@+id/tv_bookingitem_fromtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saturday, 24 January, 04:20 PM"
        android:textSize="10dp"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_fromlocation"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_fromlocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
         />

    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:id="@+id/tv_bookingitem_totitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="To"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_fromtime"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_fromtitle"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/iv_bookingitem_to"
        android:src="@drawable/to_cbs"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/iv_bookingitem_from"
        app:layout_constraintEnd_toEndOf="@+id/iv_bookingitem_from"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_totitle"/>
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bookingitem_tolocation"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Chopasani Housing Board, Shree Krishna Nagar,161"
        android:textColor="@color/Black"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_totitle"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bookingitem_to"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bookingitem_to" />
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:id="@+id/tv_bookingitem_totime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saturday, 24 January, 04:20 PM"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="10dp"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookingitem_tolocation"
        app:layout_constraintStart_toStartOf="@+id/tv_bookingitem_tolocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/DarkGray"
        app:layout_constraintTop_toBottomOf="@+id/iv_bookingitem_from"
        app:layout_constraintStart_toStartOf="@+id/iv_bookingitem_from"
        app:layout_constraintEnd_toEndOf="@+id/iv_bookingitem_from"
        app:layout_constraintBottom_toTopOf="@+id/iv_bookingitem_to"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:id="@+id/ll_bookingitem_action_ongoing"
        android:weightSum="2"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/cl_bookingitem_itemview"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rl_bookingitem_ongoing_view"
            android:background="@color/Green2"
            android:layout_weight="1">
            <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:foregroundGravity="center"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/rl_bookingitem_ongoing_map_icon"
                android:gravity="center"
                android:text="View Map"/>
            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:id="@+id/rl_bookingitem_ongoing_map_icon"
                android:background="@color/Green3">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/distance_cbs"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/Green2"
            android:id="@+id/rl_bookingitem_ongoing_abort">
            <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:layout_toLeftOf="@+id/rl_bookingitem_ongoing_abort_icon"
                android:gravity="center"
                android:text="Abort"/>
            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:id="@+id/rl_bookingitem_ongoing_abort_icon"
                android:background="@color/Green3">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/click_cbs"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/rl_bookingitem_view"
        android:background="@color/Green2"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_bookingitem_action_ongoing">
        <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_bookingitem_viewaction"
            android:text="View"
            android:textColor="@color/White"
            android:textSize="16dp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:id="@+id/rl_bookingitem_view_icon"
            android:background="@color/Green3">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/click_cbs"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>