<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="5dp"
    android:background="@color/White"
    android:id="@+id/rl_notificationitem_layout">
    <com.example.watertankercontroller.CustomViews.RobotoBoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notificationitem_heading"
        android:inputType="textCapWords"
        android:layout_marginTop="3dp"
        android:text="The Standard Lorem Ipsum passage, used since 1500s"
        android:textColor="@color/Black"
        android:maxLines="1"
        android:textSize="13dp"/>
    <com.example.watertankercontroller.CustomViews.RobotoRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notificationitem_data"
        android:layout_below="@+id/tv_notificationitem_heading"
        android:layout_marginTop="3dp"
        android:text="loremdfhsjfsfskjvsvnjdnvsdjkfjsklfjs"
        android:textSize="11dp"
        android:textColor="@color/Black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_notificationitem_data"
        android:layout_alignLeft="@+id/tv_notificationitem_heading"
        android:layout_alignRight="@+id/tv_notificationitem_data"
        android:layout_marginTop="10dp"
        android:background="@color/LightGray"/>
</RelativeLayout>